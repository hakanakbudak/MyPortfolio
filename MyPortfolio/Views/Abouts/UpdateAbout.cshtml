@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">

							<input type="hidden" asp-for="AboutId" />

							<label>Firma Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />

							<label>Çalışılan Pozisyon</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />

							<label>Açıklama</label>
							<textarea rows="4" asp-for="Details" class="form-control"></textarea>
							<br />

							<button class="btn btn-warning">Hakkımda Güncelle</button>

						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>


