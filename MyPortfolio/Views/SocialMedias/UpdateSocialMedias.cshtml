@model SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedias";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">

							<input type="hidden" asp-for="SocialMediaId" />

							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />

							<label>Url</label>
							<textarea rows="4" asp-for="Url" class="form-control"></textarea>
							<br />

							<label>Icon</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />

							<button class="btn btn-warning">Deneyim Güncelle</button>
						</form>



					</div>
				</div>
			</div>

		</div>
	</div>
</div>
