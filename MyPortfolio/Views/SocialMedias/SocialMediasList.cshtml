@model List<SocialMedia>

@{
    ViewData["Title"] = "SocialMediasList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Url</th>
									<th scope="col">Icon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaId</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a href="/SocialMedias/DeleteSocialMedias/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
										<td><a href="/SocialMedias/UpdateSocialMedias/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>

						<a href="/SocialMedias/CreateSocialMedias/" class="btn btn-primary">Yeni Sosyal Medya Girişi</a>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

